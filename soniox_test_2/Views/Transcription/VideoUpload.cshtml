@{
    ViewData["Title"] = "Video Upload for Transcription";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Upload Video for Transcription</h2>
                </div>
                <div class="card-body">
                    <form id="videoUploadForm" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="form-group mb-3">
                            <label for="videoUrl">Or enter a video URL:</label>
                            <input type="url" class="form-control" id="videoUrl" name="videoUrl" placeholder="https://example.com/video.mp4" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="videoFile">Select a video file:</label>
                            <input type="file" class="form-control" id="videoFile" name="videoFile" accept="video/*" />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Upload Video</button>
                        </div>
                    </form>
                    <div class="mt-4">
                        <label for="transcriptionResult">Transcription Result:</label>
                        <textarea id="transcriptionResult" class="form-control" rows="8" readonly></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 